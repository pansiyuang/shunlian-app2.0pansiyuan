<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.utils.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76.5dp"
            android:orientation="horizontal"
            android:paddingBottom="11.5dp"
            android:paddingTop="11.5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.shunlian.app.widget.MyImageView
                    android:id="@+id/miv_icon"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginRight="7.5dp"
                    android:layout_marginTop="6.5dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="right"
                    android:background="@drawable/rounded_corner_solid_pink_26px"
                    android:gravity="center"
                    android:minWidth="13dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53.5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="6.5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/new_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_official"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_name"
                        android:background="@drawable/rounded_corner_6e_4px"
                        android:padding="1.5dp"
                        android:text="官方"
                        android:textColor="@color/ash"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/new_gray"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/new_gray"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray_three" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="64dp"
        android:layout_height="76.5dp"
        android:background="@color/pink_color"
        android:gravity="center"
        android:text="@string/del"
        android:textColor="@color/white"
        android:textSize="15sp" />
</com.shunlian.app.utils.SwipeMenuLayout>
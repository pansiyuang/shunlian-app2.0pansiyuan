<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.shunlian.app.widget.MyLinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_8px"
        android:orientation="vertical">

        <com.shunlian.app.widget.MyRelativeLayout
            android:layout_width="270dp"
            android:layout_height="272dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/dim30"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:visibility="gone"
                android:textColor="@color/value_F4F4F4"
                android:textSize="14sp" />
        </com.shunlian.app.widget.MyRelativeLayout>

        <com.shunlian.app.widget.NewTextView
            android:id="@+id/ntv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/pink_color"
            android:textSize="28sp"
            android:visibility="gone"/>

        <com.shunlian.app.widget.NewTextView
            android:id="@+id/ntv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:textColor="@color/share_text"
            android:textSize="12sp" />

        <com.shunlian.app.widget.NewTextView
            android:id="@+id/ntv_detail"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_common_round_nobord"
            android:gravity="center"
            android:text="@string/common_chakanxiangqing"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </com.shunlian.app.widget.MyLinearLayout>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/img_fenxiang_cha" />
</com.shunlian.app.widget.MyLinearLayout>
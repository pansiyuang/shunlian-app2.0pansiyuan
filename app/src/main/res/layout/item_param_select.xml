<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_param_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:text="尺码"
        android:textColor="@color/new_text"
        android:textSize="14sp" />

    <com.shunlian.app.widget.flowlayout.TagFlowLayout
        android:id="@+id/flowLayout_parm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"></com.shunlian.app.widget.flowlayout.TagFlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12sp"
        android:layout_marginRight="10dp"
        android:background="@color/line_gay"></View>
</LinearLayout>

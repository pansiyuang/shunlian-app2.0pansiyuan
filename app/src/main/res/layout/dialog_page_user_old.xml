<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/bg_dialog_top"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:text="实在很抱歉"
            android:layout_gravity="center"
            android:textColor="@color/value_484848"
            android:lineSpacingExtra="5dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:text="您不是新用户哦，无法领取该优惠券"
            android:gravity="center"
            android:textColor="@color/text_gray2"
            android:textSize="14sp"
            android:visibility="visible"/>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:src="@mipmap/img_huiyuan_ji"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_line_gray" />

    <LinearLayout
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/value_484848"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bg_dialog_bottoml"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/my_line_gray" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="回到首页"
            android:textColor="#FB0036"
            android:textSize="15sp"
            android:background="@drawable/bg_dialog_bottomr"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_white_radius5"
   >

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
    <com.shunlian.app.widget.CBProgressBar
        android:id="@+id/my_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        cb:orientation="circle"
        cb:percent_text_color="@color/btn_red"
        cb:percent_text_size="20sp"
        cb:stroke_width="4dp"
        cb:progressBarBgColor="@color/btn_red"
        cb:progressColor="@color/white" />


        <TextView
            android:id="@+id/tv_down_2g"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="当前是流量网络数据是否确定下载"
            android:gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/value_484848"
          />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            ></View>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
     <TextView
         android:id="@+id/tv_down_calcel"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="取消下载"
         android:gravity="center"
         android:textSize="14sp"
         android:textColor="@color/value_484848"
         android:layout_weight="1"/>
        <View
            android:id="@+id/show_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line"
            ></View>
        <TextView
            android:id="@+id/tv_down_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="下载"
            android:textSize="14sp"
            android:textColor="@color/btn_red"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>


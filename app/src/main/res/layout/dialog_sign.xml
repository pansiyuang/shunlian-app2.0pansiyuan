<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.shunlian.app.widget.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shunlian.app.widget.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:layout_marginTop="126dp"
            android:background="@drawable/rounded_corner_white_8px"
            android:orientation="vertical">

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="176dp"
                android:text="签到成功"
                android:textColor="@color/pink_color"
                android:textSize="24sp" />

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:textColor="@color/share_text"
                android:textSize="15sp" />

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_detail"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_common_round_nobord"
                android:gravity="center"
                android:text="立即前往"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </com.shunlian.app.widget.MyLinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="268dp"
            android:layout_height="268dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">
            <com.shunlian.app.widget.MyRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp">
                <com.shunlian.app.widget.MyImageView
                    android:id="@+id/miv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </com.shunlian.app.widget.MyRelativeLayout>
        </android.support.v7.widget.CardView>
    </com.shunlian.app.widget.MyRelativeLayout>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@mipmap/icon_write_close" />
</com.shunlian.app.widget.MyLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_root"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/rounded_corner_solid_gray_8px">

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/value_484848"
        android:textSize="24dp" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_rel_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtv_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:textColor="@color/pink_color"
        android:textSize="12sp" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70ffffff"
        android:visibility="gone" />
</RelativeLayout>
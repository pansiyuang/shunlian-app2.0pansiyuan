<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_root"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/rounded_corner_solid_gray_8px">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/value_484848"
            android:textSize="24dp" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_rel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mtv_price"
            android:layout_marginTop="2dp"
            android:textColor="@color/pink_color"
            android:textSize="12sp" />

    </LinearLayout>


    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9Dffffff"
        android:visibility="gone" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_gray_zero" />

    <com.shunlian.app.widget.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/category_pinpai"
            android:textColor="@color/share_text"
            android:textSize="13sp" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:src="@mipmap/icon_saixuan_gd"
            android:layout_marginBottom="5dp"/>

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="bottom"
            android:layout_toLeftOf="@id/miv_arrow"
            android:text="@string/category_gengduo"
            android:textColor="@color/share_text"
            android:textSize="13sp" />
    </com.shunlian.app.widget.MyRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_attr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />
</com.shunlian.app.widget.MyLinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_service_comment"
        android:textColor="@color/new_text"
        android:textSize="15dp" />


    <com.shunlian.app.widget.RatingBarView
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        app:starCount="5"
        app:starEmpty="@mipmap/icon_chat_pingjia_n"
        app:starFill="@mipmap/icon_chat_pingjia_h"
        app:starImageSize="25dp"
        app:starStep="1" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="非常不满意"
        android:textColor="@color/new_text"
        android:textSize="15sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/light_gray_three" />

    <TextView
        android:id="@+id/tv_comment_status"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_solid_fef0f3_60px"
        android:gravity="center"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:text="@string/submit"
        android:textColor="@color/pink_color"
        android:textSize="12sp" />
</LinearLayout>
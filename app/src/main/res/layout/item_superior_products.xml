<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_sale_out"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_yishouwan_da"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_products_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="顺联动力官方旗舰店正品保障小鱼干阿帆正0课啊啊啊啊啊啊啊啊啊"
            android:textColor="@color/new_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_products_isNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_products_title"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/value_555555"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_products_isNew"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tags"
            android:layout_marginTop="22.5dp">

            <TextView
                android:id="@+id/tv_products_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:text="￥999"
                android:textColor="@color/new_text"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_earn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_products_price"
                android:background="@color/new_text"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/value_F3C262"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="赚"
                    android:textSize="10.5dp" />

                <TextView
                    android:id="@+id/tv_earn_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/new_text"
                    android:paddingLeft="3.5dp"
                    android:paddingRight="3.5dp"
                    android:text="￥28.60"
                    android:textColor="@color/white"
                    android:textSize="11.5dp" />

            </LinearLayout>

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_found_fenxiang" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
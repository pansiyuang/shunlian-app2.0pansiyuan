<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.shunlianyoupin.BottomBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/ll_tab_main_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_tab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/sele_youpin_main" />

        <TextView
            android:id="@+id/mtv_tab_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:text="@string/main_page"
            android:textColor="@color/tab_text_n"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tab_main_mystore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_tab_mystore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/sele_youpin_store" />

        <TextView
            android:id="@+id/mtv_tab_mystore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:text="我的店"
            android:textColor="@color/tab_text_n"
            android:textSize="10sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tab_person_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_tab_person_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/sele_youpin_person" />

        <TextView
            android:id="@+id/mtv_tab_person_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:text="个人中心"
            android:textColor="@color/tab_text_n"
            android:textSize="10sp" />
    </LinearLayout>
</com.shunlian.app.shunlianyoupin.BottomBar>
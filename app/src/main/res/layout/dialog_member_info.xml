<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_white_top"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:text="请确认您的导购专员"
            android:layout_marginTop="15dp"
            android:textColor="@color/new_text"
            android:textSize="20sp" />

      <LinearLayout
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginTop="10dp"
          android:orientation="horizontal"
          android:gravity="center"
          >
          <ImageView
              android:id="@+id/img_member_head"
              android:layout_width="56dp"
              android:layout_gravity="center"
              android:layout_height="56dp"
              android:scaleType="centerCrop"
            />
         </LinearLayout>
        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/value_484848"
            android:layout_marginTop="5dp"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_solid_gray_60px"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:text="邀请码"
                android:textColor="@color/text_gray2"
                android:layout_marginTop="5dp"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_member_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/value_484848"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="22sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/new_text"
                android:textSize="15sp"
                />

            <View
                android:id="@+id/view_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/my_line_gray" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定绑定"
                android:textColor="@color/value_007AFF"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
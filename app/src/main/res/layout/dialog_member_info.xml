<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_gray_top"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:text="请输入邀请码"
            android:layout_marginTop="15dp"
            android:textColor="@color/new_text"
            android:textSize="20sp" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:id="@+id/edit_input"
          android:textSize="15sp"
          android:background="@drawable/rounded_corner_solid_white_40px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:text="请输入邀请码"
            android:layout_marginTop="10dp"
            android:textColor="@color/value_484848"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_corner_solid_pink_8px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:text="邀请码只能绑定一次，绑定之后无法修改"
                android:textColor="@color/text_gray2"
                android:layout_marginLeft="5dp"
                android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_corner_solid_pink_8px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:text="您只能绑定比您先注册的用户作为导购"
                android:textColor="@color/text_gray2"
                android:layout_marginLeft="5dp"
                android:textSize="11sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/new_text"
                android:textSize="15sp"
                />

            <View
                android:id="@+id/view_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/my_line_gray" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/pink_color"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
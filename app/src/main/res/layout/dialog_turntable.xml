<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/img_choujiang_tanchuang_jiangpin" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/miv_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:text="中奖啦，恭喜你获得656金蛋"
            android:textColor="@color/value_BB913E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/miv_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@mipmap/img_choujiang_anniu_youhuiquan" />
    </RelativeLayout>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:src="@mipmap/img_renwu_guanbi" />
</LinearLayout>
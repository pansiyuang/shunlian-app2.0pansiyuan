<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.shunlian.app.widget.MyRelativeLayout
        android:id="@+id/mrlayout_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_close"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_common_back_black" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/balance_yuexiangqing"
            android:textColor="@color/my_dark_grey"
            android:textSize="18sp" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_yueminxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="@string/balance_yuemingxi"
            android:textColor="@color/new_text"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray_two" />
    </com.shunlian.app.widget.MyRelativeLayout>


    <com.shunlian.app.widget.MyImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@mipmap/icon_balance_zhanghuyue" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/balance_zhanghuyue"
        android:textColor="@color/new_text"
        android:textSize="20sp" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/new_text"
        android:textSize="50sp"
        android:textStyle="bold" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_tixian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corner_solid_da_50px"
        android:gravity="center"
        android:text="@string/balance_tixian"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/balance_tixian"
        android:textColor="@color/share_text"
        android:textSize="12sp" />

</com.shunlian.app.widget.MyLinearLayout>

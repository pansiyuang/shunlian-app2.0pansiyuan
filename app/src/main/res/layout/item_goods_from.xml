<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="12.5dp">

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_icon"
        android:layout_width="match_parent"
        android:layout_height="168.5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="14.5dp"
        android:layout_height="14.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/oval_stroke_pink"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miv_icon"
        android:ellipsize="end"
        android:paddingBottom="9sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="9dp"
        android:singleLine="true"
        android:textColor="@color/new_text"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_title"
        android:paddingLeft="5dp"
        android:textColor="@color/pink_color"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/miv_icon"
        android:layout_below="@+id/tv_goods_title"
        android:paddingRight="5dp"
        android:textColor="@color/pink_color"
        android:textSize="11sp" />
</RelativeLayout>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mllayout_root"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <com.shunlian.app.widget.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@mipmap/img_quan_dise_shang">

        <com.shunlian.app.widget.MyRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_fef9f4_10px">

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_use_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/use_coupon"
                android:gravity="center"
                android:text="立即使用"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:singleLine="true"
                android:textColor="@color/pink_color"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/mtv_use_coupon" />

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_condition"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/mtv_use_coupon"
                android:textColor="@color/pink_color"
                android:textSize="10sp" />

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ntv_condition"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="18dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/mtv_use_coupon"
                android:text="@string/coupon_shangjia"
                android:textColor="@color/pink_color"
                android:textSize="10sp" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_tag"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="fitXY" />
        </com.shunlian.app.widget.MyRelativeLayout>
    </com.shunlian.app.widget.MyRelativeLayout>

    <com.shunlian.app.widget.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_quan_dise_xia"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_img"
            android:layout_width="153dp"
            android:layout_height="153dp"
            android:scaleType="fitXY" />

        <com.shunlian.app.widget.NewTextView
            android:id="@+id/ntv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/share_text"
            android:textSize="12sp" />

        <com.shunlian.app.widget.MyRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_pricem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/share_text"
                android:textSize="12sp" />

            <com.shunlian.app.widget.NewTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/ntv_pricem"
                android:background="@drawable/rounded_corner_fdeedf_4px"
                android:padding="2dp"
                android:text="@string/coupon_keyongquan"
                android:textColor="@color/value_F28D27"
                android:textSize="12sp" />

            <com.shunlian.app.widget.NewTextView
                android:id="@+id/ntv_price0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/ntv_pricem"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/share_text"
                android:textSize="14sp" />
        </com.shunlian.app.widget.MyRelativeLayout>
    </com.shunlian.app.widget.MyLinearLayout>
</com.shunlian.app.widget.MyLinearLayout>
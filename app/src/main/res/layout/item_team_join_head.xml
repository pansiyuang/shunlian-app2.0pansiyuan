<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#FD5614"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的历史总记录"
                android:textColor="#FBC16F"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:background="@drawable/rounded_corner_solid_white_24px">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_team_head_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:textColor="#FF491A"
                android:textStyle="bold"
                android:textSize="24sp"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计获得金蛋数"
                android:gravity="center"
                android:textColor="#BCBBBB"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/bg_gray_two"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_team_head_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:textColor="#FF491A"
                android:textStyle="bold"
                android:textSize="24sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计邀请人次"
                android:gravity="center"
                android:textColor="#BCBBBB"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/bg_gray_two"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_team_head_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:gravity="center"
                android:textColor="#FF491A"
                android:textStyle="bold"
                android:textSize="24sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计当队长次数"
                android:gravity="center"
                android:textColor="#BCBBBB"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>

            <TextView
                android:id="@+id/tv_team_total_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的最近20条记录"
                android:gravity="left"
                android:textColor="#FBC16F"
                android:layout_marginTop="10dp"
                android:textSize="13sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="2dp"
        android:background="@color/white">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_close"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/icon_common_back_black" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_toLeftOf="@+id/rl_more"
            android:layout_toRightOf="@+id/miv_close"
            android:background="@drawable/rounded_corner_search"
            android:drawableLeft="@mipmap/icon_common_search_gray"
            android:drawablePadding="6.5dp"
            android:gravity="center_vertical"
            android:hint="@string/search_goods"
            android:paddingLeft="10dp"
            android:textColor="@color/share_text"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/rl_more"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_common_more_black" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_pink_12px"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="9sp" />
        </RelativeLayout>
    </RelativeLayout>

    <com.shunlian.app.widget.PagerSlidingTabStrip
        android:id="@+id/strip_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_title"
        android:background="@color/white"
        app:allowAlignment="true"
        app:allowWidthFull="false" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/strip_tab"
        android:background="@color/bg_gray_two" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_meger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/line"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="105dp"
            android:background="@color/light_gray_two" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="49.5dp"
            android:layout_below="@+id/view_line"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_meger_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_meger_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/share_text"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_to_shopcar"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/pink_color"
            android:gravity="center"
            android:text="@string/go_to_shopcar"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>
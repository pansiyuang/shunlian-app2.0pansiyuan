<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_mobileLoginTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:drawableLeft="@mipmap/image_redenvelope"
        android:drawablePadding="6dp"
        android:visibility="gone"
        android:textColor="@color/text_gray2"
        android:textSize="12sp" />

    <com.shunlian.app.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:text="手机号登录"
        android:textColor="@color/value_484848"
        android:textSize="32sp"
        android:textStyle="bold" />


    <com.shunlian.app.ui.new3_login.AccountControlsWidget
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        app:hint_text="请输入手机号"
        app:hint_text_color="@color/color_value_6c"
        app:is_mobile="true"
        app:text_color="@color/value_484848"
        app:text_size="16sp" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="请输入正确手机号"
        android:drawableLeft="@mipmap/image_exclamation"
        android:drawablePadding="4dp"
        android:textColor="#FB0A3D"
        android:textSize="12sp"
        android:visibility="invisible" />

    <!--登录按钮-->
    <com.shunlian.app.widget.MyButton
        android:id="@+id/mbtn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_solid_pink_50px"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />


    <!--登录协议-->
    <LinearLayout
        android:id="@+id/llayout_login_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="45dp"
        android:orientation="horizontal">

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即代表同意"
            android:textColor="#FF767676"
            android:textSize="12sp" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《顺联动力服务条款》"
            android:textColor="#FF007AFF"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:ll_control_adapter="true"
    app:ll_control_width="198"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_shop_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:iv_control_adapter="true"
            app:iv_control_width="198"
            app:iv_control_height="198"/>

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_tag"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/value_20"
        android:textSize="12sp"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/value_484848"
            android:textSize="13sp"/>

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_earn_much"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:textColor="@color/pink_color"
            />

    </LinearLayout>

</com.shunlian.app.widget.MyLinearLayout>
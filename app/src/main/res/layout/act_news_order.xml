<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_two"
    android:orientation="vertical">


    <com.shunlian.app.widget.MyRelativeLayout
        android:id="@+id/mrlayout_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_close"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_common_back_black" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/chat_lingquyouhui"
            android:textColor="@color/my_dark_grey"
            android:textSize="18sp" />

    </com.shunlian.app.widget.MyRelativeLayout>

    <com.shunlian.app.widget.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.shunlian.app.widget.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@mipmap/img_pingtai">
            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_logo"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"/>
            <com.shunlian.app.widget.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/miv_title"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"/>
            <com.shunlian.app.widget.MyRelativeLayout
                android:layout_width="287dp"
                android:layout_height="83dp"
                android:layout_marginTop="12dp"
                android:background="@mipmap/img_quan">
                <com.shunlian.app.widget.MyTextView
                    android:id="@+id/mtv_manjian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/new_text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="14dp"/>
                <com.shunlian.app.widget.MyTextView
                    android:id="@+id/mtv_youxiaoqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_below="@id/mtv_manjian"
                    android:textColor="@color/new_text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"/>
                <com.shunlian.app.widget.MyTextView
                    android:id="@+id/mtv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/share_text"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"/>
                <com.shunlian.app.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="@string/chat_lijilingqu"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </com.shunlian.app.widget.MyRelativeLayout>
        </com.shunlian.app.widget.MyLinearLayout>

    </com.shunlian.app.widget.MyScrollView>
</com.shunlian.app.widget.MyLinearLayout>

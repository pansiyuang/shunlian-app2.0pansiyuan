<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ash"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="12dp"
            android:text="BRITA碧然德女西裤Marella金典系列3.5L宝石红色法国经典款包邮"
            android:textColor="@color/new_text"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:includeFontPadding="false"
            android:text="980"
            android:textColor="@color/pink_color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_marginLeft="7.5dp"
            android:layout_toRightOf="@+id/tv_price"
            android:includeFontPadding="false"
            android:text="￥1118.0"
            android:textColor="@color/new_gray"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <View
            android:layout_width="3dp"
            android:layout_height="11.5dp"
            android:background="@drawable/line_pink_plus" />

        <TextView
            android:id="@+id/tv_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="8dp"
            android:includeFontPadding="false"
            android:text="自购省钱 分享赚钱 品质保证 欢迎选购"
            android:textColor="@color/new_text"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
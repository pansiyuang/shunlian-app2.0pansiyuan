<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_photo"
        android:layout_width="80dp"
        android:layout_marginLeft="30dp"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <com.shunlian.app.widget.NewTextView
        android:id="@+id/ntv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="30dp"
        android:lines="2"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/miv_photo"
        android:textColor="@color/value_444444"/>
    <com.shunlian.app.widget.NewTextView
        android:id="@+id/ntv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink_color"
        android:textSize="12sp"
        android:layout_toRightOf="@id/miv_photo"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"/>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:padding="6dp"
        android:src="@mipmap/icon_more_fenxiang" />
    <!--<com.shunlian.app.widget.NewTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="24dp"-->
        <!--android:id="@+id/ntv_code"-->
        <!--android:textSize="12sp"-->
        <!--android:background="@drawable/rounded_corner_f2f8ff_24px"-->
        <!--android:text="@string/discover_shengchengerweimatuwen"-->
        <!--android:textColor="@color/value_007AFF"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="4dp"-->
        <!--android:paddingRight="8dp"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:drawablePadding="4dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:visibility="gone"-->
        <!--android:drawableLeft="@mipmap/icon_erweimas"/>-->
    <com.shunlian.app.widget.NewTextView
        android:id="@+id/ntv_priceM"
        android:layout_toLeftOf="@id/miv_share"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/share_text"
        android:textSize="10sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/ntv_price"
        android:layout_marginLeft="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"/>

    <com.shunlian.app.widget.NewTextView
        android:id="@+id/ntv_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pink_color"
        android:textSize="12sp"
        android:layout_toRightOf="@id/miv_photo"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        android:layout_below="@id/ntv_title"/>

    <com.shunlian.app.widget.NewTextView
        android:id="@+id/ntv_priceM1"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/share_text"
        android:textSize="10sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/ntv_price1"
        android:layout_marginLeft="4dp"
        android:layout_alignBottom="@id/ntv_price1"
        android:visibility="gone"/>

    <com.shunlian.app.widget.NewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ntv_code"
        android:textSize="12sp"
        android:text="@string/discover_shengchengerweimatuwen"
        android:textColor="@color/value_007AFF"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:drawablePadding="4dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/miv_photo"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@mipmap/icon_erweimas"/>
</com.shunlian.app.widget.MyRelativeLayout>
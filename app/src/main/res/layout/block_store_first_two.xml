<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_lineOne"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="@color/bg_gray"
        android:visibility="gone" />

    <View
        android:id="@+id/view_lineTwo"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray"
        android:visibility="gone" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_two"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:paddingLeft="9.5dp"
        android:text="热销商品"
        android:textColor="@color/my_gray_three"
        android:textSize="15sp" />

    <com.shunlian.app.widget.MyLinearLayout
        android:id="@+id/mllayout_two"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:orientation="horizontal">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_two"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_login_logo" />

        <com.shunlian.app.widget.MyRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="20dp">

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="第三方的身份是"
                android:textColor="@color/my_gray_three"
                android:textSize="12sp" />

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mtv_desc"
                android:layout_marginTop="13.5dp"
                android:text="已售：12585"
                android:textColor="@color/share_text" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_type"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_below="@id/mtv_number"
                android:layout_marginTop="14dp" />

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:text="@string/common_yuan"
                android:textColor="@color/value_484848"
                android:textSize="10sp" />

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4.5dp"
                android:layout_toRightOf="@id/mtv_yuan"
                android:text="9999"
                android:textColor="@color/value_484848"
                android:textSize="15sp" />

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_earn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="4.5dp"
                android:layout_toRightOf="@id/mtv_price"
                android:text="9999"
                android:textColor="@color/pink_color"
                android:textSize="12sp" />

            <com.shunlian.app.widget.MyImageView
                android:layout_width="18.5dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/icon_shop_shoppingcart" />
        </com.shunlian.app.widget.MyRelativeLayout>

    </com.shunlian.app.widget.MyLinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_icon"
            android:layout_width="185dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_seller_out"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_yishouwan_xiao"
            android:visibility="gone" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_act"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_product"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_plus_youping_xiao"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_icon"
        android:paddingLeft="7.5dp"
        android:paddingTop="10dp"
        android:paddingRight="7.5dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="爱茉莉的SPA美容中心，更是采用了高端植物产品"
            android:textColor="@color/new_text"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥869.5"
                android:textColor="@color/value_484848"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_earn_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_products_price"
                android:paddingLeft="3.5dp"
                android:paddingRight="3.5dp"
                android:textColor="@color/pink_color"
                android:visibility="gone"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_price"
                android:layout_marginLeft="6.5dp"
                android:layout_toRightOf="@+id/tv_price"
                android:background="@drawable/rounded_rectangle_lin_gray_4px"
                android:padding="1dp"
                android:text="包邮"
                android:textColor="@color/value_c9"
                android:textSize="9sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_price"
            android:layout_marginTop="5dp"
            android:textColor="@color/share_text"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_comment"
            android:layout_alignParentRight="true"
            android:text="杭州市"
            android:textColor="@color/share_text"
            android:textSize="9sp" />
    </RelativeLayout>
</RelativeLayout>
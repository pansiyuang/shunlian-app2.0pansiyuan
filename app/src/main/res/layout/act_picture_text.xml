<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/toolbar" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_ash">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/white_ash"
                android:gravity="center"
                android:minHeight="116dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="快说说你的心得吧..."
                android:textColor="#767676"
                android:textSize="17sp" />


            <com.shunlian.app.widget.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="上传图片"
                android:textColor="@color/value_343434"
                android:textSize="19sp" />

            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/white_ash" />
            <!--添加话题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <com.shunlian.app.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="添加话题"
                    android:textColor="@color/value_343434"
                    android:textSize="15sp" />


                <com.shunlian.app.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/miv_tip"
                    android:text="#我的话题"
                    android:textColor="#148EFF"
                    android:textSize="15sp" />


                <com.shunlian.app.widget.MyImageView
                    android:id="@+id/miv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_common_viewarrow_1" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/white_ash" />

            <!--添加位置-->
            <RelativeLayout
                android:id="@+id/rlayout_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <com.shunlian.app.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="添加位置"
                    android:textColor="@color/value_343434"
                    android:textSize="15sp" />


                <com.shunlian.app.widget.MyTextView
                    android:id="@+id/mtv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/miv_tip1"
                    android:text="请您添加所在地址"
                    android:textColor="@color/color_value_6c"
                    android:textSize="15sp" />


                <com.shunlian.app.widget.MyImageView
                    android:id="@+id/miv_tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_common_viewarrow_1" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/white_ash" />

            <!--关联商品-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <com.shunlian.app.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="关联商品"
                    android:textColor="@color/value_343434"
                    android:textSize="15sp" />


                <com.shunlian.app.widget.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_stroke_pink_20px"
                    android:gravity="center"
                    android:minHeight="20dp"
                    android:minWidth="44dp"
                    android:text="添加"
                    android:textColor="@color/pink_color"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
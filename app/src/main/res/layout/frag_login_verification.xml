<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.shunlian.app.widget.MyImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="21dp"
        android:src="@mipmap/icon_login_logo" />


    <com.shunlian.app.widget.ClearableEditText
        android:id="@+id/edt_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="33dp"
        android:background="@null"
        android:digits="0123456789"
        android:drawableRight="@mipmap/icon_login_delet"
        android:hint="@string/LoginPswFrg_inputphone"
        android:inputType="number"
        android:maxLength="13"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/color_value_6c"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/light_gray_two"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edt_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_verifi"
            android:background="@null"
            android:hint="@string/LoginPswFrg_qsryzm"
            android:maxLength="4"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/color_value_6c"
            android:textSize="12sp" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/iv_verifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/light_gray_two"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp">

        <TextView
            android:id="@+id/tv_wx_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_login_wechat"
            android:drawablePadding="6dp"
            android:text="@string/LoginPswFrg_wxdl"
            android:textColor="@color/text_black_one"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_new_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/LoginPswFrg_xyhzc"
            android:textColor="@color/new_gray"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.shunlian.app.widget.MyTextView
        android:layout_marginTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="填写邀请码"
        android:textColor="@color/value_484848"
        android:textSize="19sp"
        android:textStyle="bold" />

    <com.shunlian.app.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="下单前请先填写邀请码"
        android:textColor="@color/value_484848"
        android:textSize="13sp" />

    <com.shunlian.app.ui.new3_login.InviteCodeWidget
        android:id="@+id/invite_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        app:hint_text="请输入邀请码"
        app:hint_text_color="@color/color_value_6c"
        app:text_color="@color/value_484848"
        app:text_size="16sp" />


    <com.shunlian.app.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:drawableLeft="@mipmap/img_bangzhu_dian"
        android:drawablePadding="4dp"
        android:text="一个用户只能关联一个邀请码，确认后不得更改"
        android:textColor="@color/text_gray2"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="32dp"
        android:background="@color/value_ECECEC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:orientation="horizontal">

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_gray2"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="44dp"
            android:background="@color/value_ECECEC" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/pink_color"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
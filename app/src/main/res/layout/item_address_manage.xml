<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_manage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/new_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_manage_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/new_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_manage_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_manage_name"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/iv_address_select"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/new_text"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_manage_detail"
        android:layout_marginTop="20dp"
        android:background="@color/light_gray_three" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view">

        <LinearLayout
            android:id="@+id/ll_default"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/iv_manage_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_shoppingcar_selected_h" />

            <TextView
                android:id="@+id/tv_manage_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_manage_select"
                android:text="默认地址"
                android:textColor="@color/new_text"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_manage_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_manage_del"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/edit"
            android:textColor="@color/new_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_manage_del"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/del"
            android:textColor="@color/new_text"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
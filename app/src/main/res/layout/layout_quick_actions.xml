<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mllayout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:background="@mipmap/bg_more"
    android:orientation="vertical"
    app:ll_control_adapter="true"
    app:ll_margin_right="30"
    app:ll_margin_top="60">

    <!--消息-->
    <com.shunlian.app.widget.MyRelativeLayout
        android:id="@+id/mrlayout_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:rl_control_adapter="true"
        app:rl_control_height="95"
        app:rl_margin_left="40"
        app:rl_margin_top="40">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_more_message"
            app:iv_control_adapter="true"
            app:iv_control_height="37"
            app:iv_control_width="37" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/miv_message"
            android:text="消息"
            android:textColor="@color/new_text"
            android:textSize="14sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="30" />


        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mtv_message"
            android:background="@drawable/rounded_corner_pink_12px"
            android:paddingBottom="1.5dp"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="1.5dp"
            android:text="99+"
            android:textColor="@color/white"
            android:textSize="8.5sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="55" />

    </com.shunlian.app.widget.MyRelativeLayout>


    <View
        android:id="@+id/view_firstPage"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_gray_three"
        android:visibility="gone" />

    <!--首页-->
    <com.shunlian.app.widget.MyLinearLayout
        android:id="@+id/mllayout_firstPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:ll_control_adapter="true"
        app:ll_control_height="95"
        app:ll_margin_left="40">

        <com.shunlian.app.widget.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_more_home"
            app:iv_control_adapter="true"
            app:iv_control_height="36"
            app:iv_control_width="40" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/miv_message"
            android:text="首页"
            android:textColor="@color/new_text"
            android:textSize="14sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="30" />

    </com.shunlian.app.widget.MyLinearLayout>


    <View
        android:id="@+id/view_share"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_gray_three"
        android:visibility="gone" />

    <!--分享-->
    <com.shunlian.app.widget.MyLinearLayout
        android:id="@+id/mllayout_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:ll_control_adapter="true"
        app:ll_control_height="95"
        app:ll_margin_left="40">

        <com.shunlian.app.widget.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_more_fenxiang"
            app:iv_control_adapter="true"
            app:iv_control_height="33"
            app:iv_control_width="33" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/miv_message"
            android:text="分享"
            android:textColor="@color/new_text"
            android:textSize="14sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="30" />
    </com.shunlian.app.widget.MyLinearLayout>


    <View
        android:id="@+id/view_PersonalCenter"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_gray_three"
        android:visibility="gone" />

    <!--个人中心-->
    <com.shunlian.app.widget.MyLinearLayout
        android:id="@+id/mllayout_PersonalCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:ll_control_adapter="true"
        app:ll_control_height="95"
        app:ll_margin_left="40">

        <com.shunlian.app.widget.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_zx"
            app:iv_control_adapter="true"
            app:iv_control_height="35"
            app:iv_control_width="34" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/miv_message"
            android:text="个人中心"
            android:textColor="@color/new_text"
            android:textSize="14sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="30" />
    </com.shunlian.app.widget.MyLinearLayout>


    <View
        android:id="@+id/view_printfoot"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_gray_three"
        android:visibility="gone" />

    <!--足迹-->
    <com.shunlian.app.widget.MyLinearLayout
        android:id="@+id/mllayout_printfoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:ll_control_adapter="true"
        app:ll_control_height="95"
        app:ll_margin_left="40">


        <com.shunlian.app.widget.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_zuji"
            app:iv_control_adapter="true"
            app:iv_control_height="35"
            app:iv_control_width="36" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/miv_message"
            android:text="足迹"
            android:textColor="@color/new_text"
            android:textSize="14sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="30" />
    </com.shunlian.app.widget.MyLinearLayout>


    <View
        android:id="@+id/view_feedback"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_gray_three"
        android:visibility="gone" />

    <!--我要反馈-->
    <com.shunlian.app.widget.MyLinearLayout
        android:id="@+id/mllayout_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:ll_control_adapter="true"
        app:ll_control_height="95"
        app:ll_margin_left="40">

        <com.shunlian.app.widget.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_more_fankui"
            app:iv_control_adapter="true"
            app:iv_control_height="34"
            app:iv_control_width="31" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/miv_message"
            android:text="我要反馈"
            android:textColor="@color/new_text"
            android:textSize="14sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="30" />
    </com.shunlian.app.widget.MyLinearLayout>


</com.shunlian.app.widget.MyLinearLayout>
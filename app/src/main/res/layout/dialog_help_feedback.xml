<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

    <com.shunlian.app.widget.MyTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_dialog_top"
        android:gravity="center"
        android:text="@string/help_yijianfankui"
        android:textColor="@color/new_text"
        android:textSize="15sp" />

    <com.shunlian.app.widget.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/et_moto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/value_F7F7F7"
            android:gravity="top"
            android:hint="@string/help_ninjuedenali"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/new_text"
            android:textColorHint="@color/color_value_6c"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="14sp" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/value_F7F7F7"
            android:text="0/140"
            android:visibility="gone"
            android:textColor="@color/color_value_6c" />
    </com.shunlian.app.widget.MyRelativeLayout>


    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/pink_color"
        android:textSize="12sp"
        android:paddingLeft="10dp" />


    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_dialog_bottom"
        android:gravity="center"
        android:text="@string/help_tijiao"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="16dp"/>
</com.shunlian.app.widget.MyLinearLayout>
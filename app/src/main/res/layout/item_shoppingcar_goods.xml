<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.utils.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="7.5dp"
        android:paddingTop="7.5dp">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_select"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/img_login_choice" />


        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_goods"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.5dp"
            android:layout_toRightOf="@id/miv_select"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/rl_goods_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/miv_goods"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/miv_goods"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="Dior/迪奥小姐花漾淡香氛30ml /50ml香水享精美礼盒包装"
                android:textColor="@color/new_text"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_goods_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_title"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="淡粉色，30ml"
                android:textColor="@color/share_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_goods_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_param"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="已降价9.99元"
                android:textColor="@color/pink_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/miv_goods"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/miv_goods"
            android:ellipsize="end"
            android:lines="1"
            android:text="¥  219"
            android:textColor="@color/pink_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/miv_goods"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="x1"
            android:textColor="@color/share_text"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_edit_del"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/miv_goods"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_rectangle_pink_4px"
            android:gravity="center"
            android:text="@string/del"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_goods_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/miv_goods"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_min"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_shoppingcar_jian_line"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/my_gray_one"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_goods_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rectangle_gray"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/new_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_goods_add"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@mipmap/img_shoppingcar_jia_line"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/my_gray_one"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_edit_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_title"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="淡粉色，30ml"
                android:textColor="@color/share_text"
                android:textSize="12sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_goods_parm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rectangle_gray_6px"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_goods_attribute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="淡粉色，50ml"
                    android:textColor="@color/new_text"
                    android:textSize="12sp" />

                <com.shunlian.app.widget.MyImageView
                    android:id="@+id/miv_goods_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_shoppingcar_shopjiantou" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/pink_color"
        android:gravity="center"
        android:padding="20dp"
        android:text="删除"
        android:textColor="@color/white" />
</com.shunlian.app.utils.SwipeMenuLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mrl_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/img_youhuiquan_2"
    app:ll_control_adapter="true"
    app:ll_control_height="120"
    app:ll_control_width="290"
    app:ll_margin_bottom="25"
    app:ll_margin_left="10"
    app:ll_margin_right="10"
    app:ll_margin_top="25">

    <com.shunlian.app.widget.MyRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:rl_control_adapter="true"
        app:rl_control_height="120"
        app:rl_control_width="130">

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="120"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmb"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="11"
            app:tv_margin_top="55" />

    </com.shunlian.app.widget.MyRelativeLayout>

    <com.shunlian.app.widget.MyLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:ll_control_adapter="true"
        app:ll_control_height="120"
        app:ll_control_width="160">

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="3"
            android:maxLines="1"
            android:text="优惠券"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="10"
            app:tv_margin_top="18" />


        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_full_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="满2900元可用"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:tv_control_adapter="true"
            app:tv_margin_left="10"
            app:tv_margin_top="20" />
    </com.shunlian.app.widget.MyLinearLayout>


</com.shunlian.app.widget.MyLinearLayout>
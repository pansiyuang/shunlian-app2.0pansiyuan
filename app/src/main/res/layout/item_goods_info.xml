<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/value_f8"
    app:rl_control_adapter="true"
    app:rl_margin_left="20"
    app:rl_margin_right="20"
    app:rl_margin_top="43">

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_goods_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:iv_control_adapter="true"
        app:iv_control_height="193"
        app:iv_control_width="193" />


    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_goods_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/miv_goods_pic"
        android:text="施华蔻系列黄金果油系列（长发易分叉发质专用）"
        android:textColor="@color/new_text"
        android:textSize="14sp"
        app:tv_control_adapter="true"
        app:tv_margin_left="23"
        app:tv_margin_top="35" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mtv_goods_detail"
        android:layout_toRightOf="@+id/miv_goods_pic"
        android:text="￥98.00"
        android:textColor="@color/new_text"
        android:textSize="14sp"
        app:tv_control_adapter="true"
        app:tv_margin_left="23"
        app:tv_margin_top="40" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_append_comment_staus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mtv_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="9dp"
        android:background="@drawable/edge_frame_r3"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:text="写追评"
        android:textColor="@color/pink_color"
        android:textSize="13sp"
        android:visibility="gone" />

</com.shunlian.app.widget.MyRelativeLayout>
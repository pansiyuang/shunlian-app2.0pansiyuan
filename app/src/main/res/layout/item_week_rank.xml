<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:id="@+id/rl_rank"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/value_2D2D2D"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rl_rank"
        android:scaleType="centerCrop" />

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_v"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignBottom="@+id/miv_icon"
        android:layout_alignRight="@+id/miv_icon"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/miv_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="嘎哈嘎达"
                android:textColor="@color/value_343434"
                android:textSize="15sp" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_expert"
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="6860热度"
            android:textColor="@color/text_gray2"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_attention"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corner_stroke_pink_20px"
        android:gravity="center"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:text="关注"
        android:textColor="@color/pink_color"
        android:textSize="14sp" />
</RelativeLayout>
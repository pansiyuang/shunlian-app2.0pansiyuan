<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.shunlian.app.widget.MyLinearLayout
        android:id="@+id/mll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:ll_control_adapter="true"
        app:ll_margin_left="20"
        app:ll_margin_right="20"
        app:ll_margin_bottom="30"
        app:ll_margin_top="30">

        <com.shunlian.app.widget.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/civ_head"
                android:scaleType="fitXY"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/new_text"
                android:textSize="13sp"
                app:tv_control_adapter="true"
                app:tv_margin_left="14" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iv_control_adapter="true"
                app:iv_margin_left="10" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_medal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iv_control_adapter="true"
                app:iv_margin_left="10" />


            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/line_btn"
                android:textSize="12sp"
                app:tv_control_adapter="true"
                app:tv_margin_left="14" />
        </com.shunlian.app.widget.MyLinearLayout>

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/new_text"
            android:textSize="13sp"
            app:tv_control_adapter="true"
            app:tv_margin_top="28" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_pic"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:adjustViewBounds="true"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_append_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/pink_color"
            android:textSize="13sp"
            app:tv_control_adapter="true"
            app:tv_margin_top="37" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/new_text"
            android:textSize="13sp"
            app:tv_control_adapter="true"
            app:tv_margin_top="20" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_pic1"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" />


        <!--属性-->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/line_btn"
                android:textSize="12sp"/>

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_comment_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/line_btn"
                android:textSize="12sp"/>

        </LinearLayout>

        <com.shunlian.app.widget.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:ll_control_adapter="true"
            app:ll_margin_top="24">

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_buy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/line_btn"
                android:textSize="12sp" />


            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/line_btn"
                android:textSize="12sp" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_pingjia_zan_n"
                app:iv_control_adapter="true"
                app:iv_control_height="20"
                app:iv_control_width="20"
                app:iv_margin_left="14" />
        </com.shunlian.app.widget.MyLinearLayout>

        <com.shunlian.app.widget.MyRelativeLayout
            android:id="@+id/mrl_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rl_control_adapter="true"
            app:rl_margin_top="16">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_sanjiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_sanjiao" />

            <com.shunlian.app.widget.MyImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/img_sanjiao" />

            <com.shunlian.app.widget.MyTextView
                android:id="@+id/mtv_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/miv_sanjiao"
                android:background="@color/white_ash"
                android:paddingBottom="8dp"
                android:paddingLeft="6.5dp"
                android:paddingRight="6.5dp"
                android:paddingTop="8dp"
                android:textColor="@color/my_gray_two"
                android:textSize="13sp" />
        </com.shunlian.app.widget.MyRelativeLayout>
    </com.shunlian.app.widget.MyLinearLayout>

    <!--空页面-->
    <com.shunlian.app.widget.empty.NetAndEmptyInterface
        android:id="@+id/nei_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</com.shunlian.app.widget.MyFrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/new_text"
    android:textSize="14sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
      >
    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingTop="8dp"
        android:maxHeight="34dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_login_logo"/>
    <com.shunlian.app.widget.NewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ntv_title"
        android:textSize="12sp"
        android:text="dddd"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/miv_icon"
        android:textColor="@color/share_text"
        android:layout_marginTop="10dp"/>
    <com.shunlian.app.widget.NewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="签到"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/ntv_tag"
        android:layout_alignBottom="@id/miv_icon"
        android:layout_toRightOf="@id/miv_icon"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:layout_marginLeft="2dp"
        android:background="@drawable/bg_center_tag"/>
    <View
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:id="@+id/view_tag"
        android:layout_alignBottom="@id/miv_icon"
        android:layout_toRightOf="@id/miv_icon"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_marginLeft="2dp"
        android:background="@drawable/point_plus_seekbar"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="16dp"
        android:id="@+id/im_tag"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        />
    </RelativeLayout>
</com.shunlian.app.widget.MyRelativeLayout>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_common_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pickerToolbar"
            android:clipToPadding="false"
            android:columnWidth="120dp"
            android:horizontalSpacing="2dp"
            android:paddingBottom="?android:attr/actionBarSize"
            android:verticalSpacing="2dp" />

        <RelativeLayout
            android:id="@+id/photo_picker_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#cc000000"
            android:minHeight="?android:attr/actionBarSize">

            <Button
                android:id="@+id/btnAlbum"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableRight="@drawable/text_indicator"
                android:gravity="center"
                android:text="@string/all_image"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/rounded_rectangle_pink_4px"
                android:enabled="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

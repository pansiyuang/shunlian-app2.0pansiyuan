<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="clip_horizontal"
    android:orientation="vertical">

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_windows6" />

    <com.shunlian.app.widget.MyWebView
        android:id="@+id/mWebView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/miv_icon"
        android:layout_alignLeft="@+id/miv_icon"
        android:layout_alignRight="@+id/miv_icon"></com.shunlian.app.widget.MyWebView>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/mWebView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:src="@mipmap/icon_write_close" />
</RelativeLayout>
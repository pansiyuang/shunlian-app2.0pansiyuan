<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_top"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="19dp"
            android:text="修改购买数量"
            android:textColor="@color/value_484848"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="34dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_xiugaidingdan_jianhao" />

            <EditText
                android:id="@+id/mtv_edit_count"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/value_484848"
                android:textSize="18sp" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_xiugaidingdan_jiahao" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:background="@null"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_bottoml"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/value_484848"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/my_line_gray" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_bottoml"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/pink_color"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
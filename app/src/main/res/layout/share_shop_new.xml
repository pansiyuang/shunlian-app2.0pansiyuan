<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <com.shunlian.app.widget.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_white_8px"
            android:orientation="vertical">

            <com.shunlian.app.widget.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx110"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.shunlian.app.widget.MyImageView
                    android:id="@+id/miv_user_head"
                    android:layout_width="@dimen/xx60"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/xx30" />


                <com.shunlian.app.widget.MyTextView
                    android:id="@+id/mtv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xx12"
                    android:textColor="@color/new_text"
                    android:textSize="12sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xx60">
                    <com.shunlian.app.widget.MyImageView
                        android:layout_width="@dimen/xx140"
                        android:layout_height="@dimen/xx36"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/xx30"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/img_share_logo" />
                </RelativeLayout>
            </com.shunlian.app.widget.MyLinearLayout>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_shop"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/xx30"
                android:layout_height="@dimen/xx580"
                android:layout_marginLeft="@dimen/xx30"
                android:layout_marginRight="@dimen/xx30"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/xx20"
               />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/light_gray_three"
                android:visibility="visible" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/xx340"
                android:paddingLeft="@dimen/xx30"
                android:paddingRight="@dimen/xx30"
                android:layout_marginTop="@dimen/xx60"
                android:paddingBottom="@dimen/xx10">
                <LinearLayout
                    android:layout_width="@dimen/xx300"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                    <com.shunlian.app.widget.MyImageView
                        android:id="@+id/miv_code"
                        android:layout_width="@dimen/xx280"
                        android:layout_height="@dimen/xx280"
                        android:layout_gravity="right"
                        android:layout_centerVertical="true"
                     />
                    <com.shunlian.app.widget.MyTextView
                        android:id="@+id/mtv_prompt"
                        android:layout_width="@dimen/xx280"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/xx16"
                        android:text="长按识别二维码"
                        android:layout_marginTop="@dimen/xx16"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:textColor="@color/my_gray_one"
                        android:textSize="@dimen/xx22" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/xx400"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/xx140"
                        android:orientation="horizontal"
                        android:gravity="left|top">
                        <com.shunlian.app.widget.MyImageView
                            android:id="@+id/miv_store"
                            android:layout_width="@dimen/xx140"
                            android:layout_height="@dimen/xx140"
                            />
                        <com.shunlian.app.widget.MyTextView
                            android:id="@+id/mtv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/value_484848"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/xx30"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="@dimen/xx42" />
                    </LinearLayout>
                    <com.shunlian.app.widget.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xx25"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="要想生活有乐趣！打开顺联动力购物去~"
                        android:lineSpacingExtra="@dimen/xx10"
                        android:textColor="@color/my_gray_three"
                        android:textSize="@dimen/xx42" />


                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:id="@+id/line_share_line"
                android:background="@color/light_gray_three" />

            <com.shunlian.app.widget.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/line_share_boottom"
                android:orientation="horizontal">

                <com.shunlian.app.widget.MyLinearLayout
                    android:id="@+id/mllayout_save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.shunlian.app.widget.MyImageView
                        android:layout_width="@dimen/xx120"
                        android:layout_height="@dimen/xx120"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_saveimage" />

                    <com.shunlian.app.widget.NewTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/discover_baocuntupian"
                        android:textColor="@color/share_text"
                        android:textSize="12sp" />
                </com.shunlian.app.widget.MyLinearLayout>
            </com.shunlian.app.widget.MyLinearLayout>
        </LinearLayout>

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_root"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/icon_write_close" />
    </com.shunlian.app.widget.MyRelativeLayout>
</com.shunlian.app.widget.MyRelativeLayout>
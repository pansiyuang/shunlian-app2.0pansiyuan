<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.shunlian.app.ui.register.SelectRecommendAct">

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:src="@mipmap/icon_login_back" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:text="@string/SelectRecommendAct_hyp"
        android:textColor="@color/new_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_selecttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="@string/SelectRecommendAct_sztjr"
        android:textColor="@color/new_text"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_pink_btn"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/SelectRecommendAct_sure"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_view"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_sure"
        android:layout_below="@+id/tv_selecttitle"/>

    <ScrollView
        android:id="@+id/sv_mask"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>
    <FrameLayout
        android:id="@+id/frame_detail"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim">

        <LinearLayout
            android:id="@+id/ll_detail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rectangle_15px"
            android:orientation="vertical">

            <com.shunlian.app.widget.circle.CircleImageView
                android:id="@+id/miv_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/home_box"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/miv_icon"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="小企鹅的名字不好听"
                android:textColor="@color/new_text"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nickname"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.shunlian.app.widget.MyImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_login_v6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/bg_login_chuangkejingying"
                    android:gravity="center"
                    android:text="精英创客"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/ll_vip"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/e4_dotted_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_resg_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册时间："
                    android:textColor="@color/new_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_resg_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_resg_time1"
                    android:text="2017-12-03"
                    android:textColor="@color/share_text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/tv_resg_time1"
                    android:layout_below="@+id/tv_resg_time1"
                    android:layout_marginTop="15dp"
                    android:text="热度："
                    android:textColor="@color/new_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_hot1"
                    android:layout_toRightOf="@+id/tv_hot1"
                    android:text="999"
                    android:textColor="@color/share_text"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_pink_btn"
                android:gravity="center"
                android:padding="10dp"
                android:text="选择"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_notSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_pink_btn1"
                android:gravity="center"
                android:padding="10dp"
                android:text="不选择"
                android:textColor="@color/share_text" />

        </LinearLayout>

    </FrameLayout>
</RelativeLayout>

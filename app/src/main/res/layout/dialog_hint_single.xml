<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mllayout_root"
    android:background="@color/transparent">

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_top"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:paddingBottom="36dp"
        android:paddingTop="36dp"
        android:textColor="@color/new_text"
        android:textSize="16sp" />

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_dialog_bottom"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="@string/help_tijiao"
        android:textColor="@color/white"
        android:textSize="14sp" />
</com.shunlian.app.widget.MyLinearLayout>
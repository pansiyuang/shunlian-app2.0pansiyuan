<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="49dp"
            android:layout_height="49dp">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_icon"
                android:layout_width="49dp"
                android:layout_height="49dp" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_v"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/miv_icon"
                android:layout_alignRight="@+id/miv_icon"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:textColor="@color/value_343434"
                    android:textSize="14sp" />

                <com.shunlian.app.widget.MyImageView
                    android:id="@+id/miv_expert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="用户昵称"
                android:textColor="@color/new_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_faxian_dainzan_hong" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="点赞了这条心得"
            android:textColor="@color/value_484848"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp"
        android:background="@color/white_ash"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_goods_icon"
                android:layout_width="33dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_faxian_dianzan_shipin"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="辣的哈哈打电话考爱自己哦傲娇啊家具家电"
            android:textColor="@color/new_gray"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
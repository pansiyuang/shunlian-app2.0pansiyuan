<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4.8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_icon"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingRight="9.5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="爱茉莉的SPA美容中心，更是采用了高端植物产品"
                android:textColor="@color/new_text"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥869.5"
                    android:textColor="@color/pink_color"
                    android:textSize="11.5sp" />

                <TextView
                    android:id="@+id/tv_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_price"
                    android:layout_marginLeft="6.5dp"
                    android:layout_toRightOf="@+id/tv_price"
                    android:background="@drawable/rounded_rectangle_lin_gray_4px"
                    android:padding="1dp"
                    android:text="包邮"
                    android:textColor="@color/value_c9"
                    android:textSize="9sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_price"
                android:layout_marginTop="5dp"
                android:text="399条评论 99%好评"
                android:textColor="@color/share_text"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_comment"
                android:layout_alignParentRight="true"
                android:text="杭州市"
                android:textColor="@color/share_text"
                android:textSize="9sp" />
        </RelativeLayout>
    </LinearLayout>

    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_corner"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/oval_stroke_pink"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

</com.shunlian.app.widget.MyRelativeLayout>
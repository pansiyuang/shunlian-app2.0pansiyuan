<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="19dp">


    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_find_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/new_text"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_pic"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <com.shunlian.app.widget.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/value_BDBDBD"
            android:textSize="13sp" />

        <com.shunlian.app.widget.MyImageView
            android:id="@+id/miv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:layout_toLeftOf="@id/mtv_zan"
            android:src="@mipmap/icon_sucai_zan_n" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_toLeftOf="@id/miv_zan"
            android:textColor="@color/pink_color"
            android:textSize="14sp"
            android:text="@string/discover_qufenxiang"
            android:background="@drawable/bg_go_share"/>
    </com.shunlian.app.widget.MyRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_ash"/>
</com.shunlian.app.widget.MyLinearLayout>
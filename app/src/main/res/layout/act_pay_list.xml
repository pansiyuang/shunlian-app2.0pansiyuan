<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lLayout_pay"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#F0F4F7"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="17dp"
                android:text="@string/select_pay_type"
                android:textColor="@color/new_text"
                android:textSize="15sp" />

            <com.shunlian.app.widget.MyImageView
                android:id="@+id/miv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@mipmap/icon_login_delet" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/light_gray_three" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:background="@color/white"
            android:textColor="@color/new_text"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none" />

        <com.shunlian.app.widget.MyTextView
            android:id="@+id/mtv_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="立即付款"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <WebView
        android:id="@+id/h5_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>

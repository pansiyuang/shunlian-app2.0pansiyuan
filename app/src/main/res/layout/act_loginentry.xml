<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_close"
        android:layout_width="20dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:padding="3dp"
        android:src="@mipmap/icon_login_close" />

    <com.shunlian.app.widget.MyImageView
        android:id="@+id/miv_sldl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/miv_close"
        android:layout_marginTop="28dp"
        android:src="@mipmap/logo_s" />

    <!--这是视频-->
    <com.shunlian.app.widget.SmallVideoPlayer
        android:id="@+id/customVideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/miv_sldl"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="26dp"
        android:visibility="invisible" />


    <!--微信登录-->
    <LinearLayout
        android:id="@+id/llayout_wechat_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/mbtn_login"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_corner_green_48px"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shunlian.app.widget.MyImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="微信登录"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
    <!--手机登录-->
    <com.shunlian.app.widget.MyButton
        android:id="@+id/mbtn_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/mtv_pwd_login"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_stroke_6cpx"
        android:gravity="center"
        android:text="手机登录"
        android:textColor="@color/value_484848"
        android:textSize="15sp" />
    <!--密码登录-->
    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_pwd_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="32dp"
        android:paddingBottom="20dp"
        android:paddingTop="23dp"
        android:text="账号密码登录"
        android:textColor="@color/value_484848"
        android:textSize="12sp" />
    <!--注册-->
    <com.shunlian.app.widget.MyTextView
        android:id="@+id/mtv_register"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="32dp"
        android:paddingBottom="20dp"
        android:paddingTop="23dp"
        android:text="注册"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="@color/value_484848"
        android:textSize="12sp" />
    <!--登录协议-->
    <LinearLayout
        android:id="@+id/llayout_login_agreement"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即代表同意"
            android:textColor="#FF767676"
            android:textSize="12sp" />

        <com.shunlian.app.widget.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《顺联动力服务条款》"
            android:textColor="#FF007AFF"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>
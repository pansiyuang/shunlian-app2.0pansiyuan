<?xml version="1.0" encoding="utf-8"?>
<com.shunlian.app.widget.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="163dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner_solid_team_into"
            >

            <TextView
                android:id="@+id/tv_text_password"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:gravity="center"
                android:textColor="#FDE294"
                android:textSize="15sp"
                android:text="张三岁"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:alpha="0.32"
                android:background="#FDE294"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#FDE294"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:alpha="0.32"
                        android:text="算了"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:alpha="0.32"
                    android:background="#FDE294"></View>
                    <TextView
                        android:id="@+id/tv_sure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="#FDE294"
                        android:gravity="center"
                        android:text="去粘贴"/>
                </LinearLayout>
            </LinearLayout>



</com.shunlian.app.widget.MyLinearLayout>